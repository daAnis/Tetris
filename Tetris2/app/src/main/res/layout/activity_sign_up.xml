<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    tools:context=".SignUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выберите свое имя"
        android:textColor="@color/text_color"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@id/editTextTextPersonName"
        android:layout_marginTop="12px"/>

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/text_color"
        android:background="@drawable/edit_text_style"
        android:layout_marginTop="12px"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выберите свой пароль"
        android:textColor="@color/text_color"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editTextTextPersonName"
        android:layout_alignLeft="@id/editTextTextPassword"
        android:layout_marginTop="12px"/>

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@id/textView1"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_color"
        android:background="@drawable/edit_text_style"
        android:layout_marginTop="12px"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Повторите пароль"
        android:textColor="@color/text_color"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editTextTextPassword"
        android:layout_alignLeft="@id/editTextTextPasswordRepeat"
        android:layout_marginTop="12px"/>

    <EditText
        android:id="@+id/editTextTextPasswordRepeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@id/textView2"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_color"
        android:background="@drawable/edit_text_style"
        android:layout_marginTop="12px"/>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/next_button"
        android:layout_toRightOf="@id/editTextTextPasswordRepeat"
        android:layout_below="@id/textView2"
        android:background="@null"
        android:layout_marginTop="12px"
        android:layout_marginLeft="12px"
        android:maxHeight="31px"
        android:maxWidth="43px"/>

    </RelativeLayout>

</RelativeLayout>