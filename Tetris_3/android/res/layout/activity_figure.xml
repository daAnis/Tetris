<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FigureActivity"
    android:background="@color/primary_color"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@color/text_color"
        android:text="Задайте структуру"
        android:textAlignment="center"
        android:gravity="center_horizontal" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/check_box_color"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="50dp"/>
    <ru.ssau.fiit.tetris.FigureView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tw5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/text_color"
            android:text="Уровень появления"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <NumberPicker
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:theme="@style/NumberPickerTheme"
            android:layout_toRightOf="@id/tw5"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">
        <Button
            android:id="@+id/save_figure"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Сохранить"
            android:textColor="@color/text_color"
            android:background="@drawable/edit_text_style"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:layout_gravity="fill"/>
        <Button
            android:id="@+id/cancel_figure"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Удалить"
            android:textColor="@color/text_color"
            android:background="@drawable/edit_text_style"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:layout_gravity="fill"/>
    </LinearLayout>
</LinearLayout>