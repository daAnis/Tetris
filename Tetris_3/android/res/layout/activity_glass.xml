<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    android:orientation="vertical"
    tools:context=".GlassActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@color/text_color"
        android:text="Выберите размеры"
        android:textAlignment="center"
        android:gravity="center_horizontal" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/check_box_color"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="50dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ru.ssau.fiit.tetris.GlassView
            android:layout_width="200dp"
            android:layout_height="300dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Высота"
            android:textColor="@color/text_color"
            android:layout_toLeftOf="@id/h"/>
        <EditText
            android:id="@+id/h"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/text_color"
            android:background="@drawable/edit_text_style"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="30dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Ширина"
            android:textColor="@color/text_color"
            android:layout_toLeftOf="@id/w"
            android:layout_below="@id/h"/>
        <EditText
            android:id="@+id/w"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/text_color"
            android:background="@drawable/edit_text_style"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/h"/>
        <Button
            android:id="@+id/draw_glass"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Посмотреть"
            android:textColor="@color/text_color"
            android:background="@drawable/edit_text_style"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="50dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/w"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/check_box_color"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@color/text_color"
        android:text="Выберите остальное"
        android:textAlignment="center"
        android:gravity="center_horizontal"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/check_box_color"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="50dp"/>

</LinearLayout>